<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secondView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgr_schedule"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:padding="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_1sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/flagLeftSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:src="@drawable/russia" />

            <TextView
                android:id="@+id/tvNameCountryLeftSecond"
                style="@style/tvNameCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"

                tools:text="Sevilla" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDetailSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/tabtextselect"
            android:textSize="@dimen/_13sdp"
            tools:text="1:45 AM" />

        <LinearLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_weight="0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/flagRightSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:src="@drawable/saudiarabia" />

            <TextView
                android:id="@+id/tvNameCountryRightSecond"
                style="@style/tvNameCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"

                tools:text="FC Barcelona" />


        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvStadiumSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        tools:text="Luzhniki Stadium, Moscow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E"
        android:visibility="gone" />
</LinearLayout>